{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "predeploy": [
      "website/build.sh"
    ],
    "public": "website/public",
    "rewrites": [
      {
        "source":"**",
        "function":"app"
      }
    ],
    "ignore": [
      "firebase.json",
      "firestore.indexes.json",
      "firestore.rules",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
